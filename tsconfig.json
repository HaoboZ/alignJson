{
	"compilerOptions": {
		"target"           : "esnext",
		"module"           : "commonjs",
		"declaration"      : true,
		"lib"              : [
			"ESNext"
		],
		"allowJs"          : true,
		"outDir"           : "build",
		"skipLibCheck"     : true,
		"rootDir"          : "src",
		"strict"           : false,
		"noImplicitAny"    : false,
		"esModuleInterop"  : true,
		"resolveJsonModule": true,
		"moduleResolution" : "node"
	},
	"include"        : [ "src" ]
}
